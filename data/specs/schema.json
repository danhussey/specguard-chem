{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SpecGuard Spec",
  "type": "object",
  "required": ["id", "version", "constraints", "behaviour"],
  "properties": {
    "id": {"type": "string"},
    "version": {"type": "integer", "minimum": 1},
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "check", "params"],
        "properties": {
          "id": {"type": "string"},
          "type": {"enum": ["hard", "soft"]},
          "check": {"type": "string"},
          "params": {"type": "object"},
          "severity": {"type": "string"},
          "weight": {"type": "number"}
        }
      }
    },
    "behaviour": {
      "type": "object",
      "required": ["interrupt_policy"],
      "properties": {
        "interrupt_policy": {"type": "string"},
        "abstain_policy": {"type": "object"}
      }
    }
  },
  "additionalProperties": false
}
